<div class="field">
    <fieldset>
        {{#if label}}<legend>{{label}}</legend>{{/if}}
        <select name="{{name}}" autocomplete="off">
            <option value="" disabled>select an option</option>
            {{#each options}}
                <option value="{{value}}" {{#ifCond ../value._id '==' value}}selected{{/ifCond}}>{{label}}</option>
            {{/each}}
        </select>
    </fieldset>
</div>